{
    "compilerOptions": {
        /* Visit https://aka.ms/tsconfig.json to read more about this file */
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "Node10",
        "isolatedModules": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "outDir": "./lib/cjs",
        "noEmit": false,
        "declaration": true,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src"]
}
