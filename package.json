{
    "name": "@etsoo/restclient",
    "version": "1.0.44",
    "description": "TypeScript REST client supports Axios and Fetch",
    "main": "lib/mjs/index.js",
    "module": "lib/cjs/index.js",
    "types": "lib/mjs/index.d.ts",
    "exports": {
        ".": {
            "import": "./lib/mjs/index.js",
            "require": "./lib/cjs/index.js"
        }
    },
    "scripts": {
        "build": "tsc -p tsconfig.json && tsc -p tsconfig.cjs.json",
        "format": "prettier --write src/**/*.ts",
        "lint": "eslint --ext .ts,.tsx src/",
        "test": "jest",
        "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand"
    },
    "jest": {
        "automock": false,
        "testMatch": [
            "<rootDir>/__tests__/**/*.ts"
        ],
        "testEnvironment": "jsdom",
        "transform": {
            ".+\\.jsx?$": "babel-jest",
            ".+\\.tsx?$": "ts-jest"
        },
        "transformIgnorePatterns": [
            "/node_modules/(?!@etsoo/).+\\.js$"
        ]
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ETSOO/restclient.git"
    },
    "keywords": [
        "REST",
        "API",
        "axios",
        "fetch",
        "TypeScript"
    ],
    "author": "Garry Xiao",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ETSOO/restclient/issues"
    },
    "homepage": "https://github.com/ETSOO/restclient#readme",
    "dependencies": {
        "@etsoo/shared": "^1.0.32",
        "@types/node-fetch": "^2.5.11",
        "axios": "^0.21.1",
        "node-fetch": "^2.6.1",
        "typescript": "^4.3.5"
    },
    "devDependencies": {
        "@babel/cli": "^7.13.14",
        "@babel/core": "^7.13.15",
        "@babel/plugin-transform-runtime": "^7.13.15",
        "@babel/preset-env": "^7.13.15",
        "@babel/runtime-corejs3": "^7.13.10",
        "@types/jest": "^26.0.22",
        "@typescript-eslint/eslint-plugin": "^4.22.0",
        "@typescript-eslint/parser": "^4.22.0",
        "eslint": "^7.24.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.1.0",
        "eslint-plugin-import": "^2.22.1",
        "jest": "^26.6.3",
        "jest-fetch-mock": "^3.0.3",
        "prettier": "^2.2.1",
        "ts-jest": "^26.5.4"
    }
}
